@model DoctorMedicalWeb.Models.Usar_TipoFormulario

@{
    ViewBag.Title = "PruebaAngular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PruebaAngular</h2>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
<script type="text/javascript">
    var app = angular.module('MyApp', [])
    app.controller('MyController', function ($scope, $http, $window) {
        $scope.ButtonClick = function () {
            var post = $http({
                method: "POST",
                url: "/TipoFormulario/AjaxMethod",
                dataType: 'json',
                data: { name: $scope.Name },
                headers: { "Content-Type": "application/json" }
            });

            post.success(function (data, status) {
                $scope.Name = "Hello pactica " + data.Name;
                $window.alert("Hello: " + data.Name + " .\nCurrent Date and Time: " + data.DateTime);
            });

            post.error(function (data, status) {
                $window.alert(data.Message);
            });
        }
    });

